<div class="container">
    <% @destinations.each do |dest| %>
        <div class="row justify-content-md-center">
            <div class='col-4 mt-4' >
                <div class="card text-center shadow mb-5 bg-white rounded">
                <p class="card-header"><%= dest.country %></p>
                <h5 class="card-title mt-2"><%= link_to dest.city, destination_path(dest) %></h5>
                    <div class="card-body">Destination Trips</div>
                </div>
            </div>
        </div>
    <% end %>
</div>