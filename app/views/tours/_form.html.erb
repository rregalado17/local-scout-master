<% if @tour.errors.any? %>
    <% @tour.errors.full_messages.each do |msg| %>
        <p class="error"><%= msg %></p>
    <% end %>
<% end %>

<div class='container mt-4'>
<%= form_with(model: @tour, local: true) do |f| %>

    <div class="form-group row"> 
    <%= f.label :destinations_attributes, "City", class:"col-2 col-form-label" %>
    <div class='col-10'>
    <%= f.text_field :destinations_attributes, list: "destination_autocomplete", class: "form-control" %>
    <datalist id="destination_autocomplete">
        <% Destination.all.each do |d| %>
            <option value="<%= (d.city) %>">
        <% end %>
    </datalist>
    </div>

    <div class="form-group row">
        <%= f.label :title, class:"col-2 col-form-label" %>
        <div class='col-10'>        
            <%= f.text_field :title, class: "form-control" %>
        </div>
    </div>
    
    <div class="form-group row">
        <%= f.label :description, class:"col-2 col-form-label" %>
        <div class='col-10'>        
            <%= f.text_field :description, class: "form-control" %>
        </div>
    </div> 

    <div class="form-group row">
        <%= f.label :duration, class:"col-2 col-form-label" %>
        <div class='col-10'>
            <%= f.number_field :duration, class: "form-control" %>
        </div>
    </div>

    <div class="form-group row">
        <div class="input-group mb-3">
            <div class="input-group-prepend col-2">
                <span class="input-group-text col-form-label">Price: $</span>
            </div>
        <%= f.number_field :price, class: "form-control" %>
        <div class="input-group-append">
            <span class="input-group-text">.00</span>
        </div>
    </div>




    <div class="form-group mt-4">
        <%= f.submit class:'btn btn-outline-success btn-lg' %>
    </div>
    
    <%= f.hidden_field :user_id, values: current_user.id %>
    <% end %>
</div>












