<%= form_for(@tour)do |f| %>
    <%= f.label 'Tour Title:' %><br>
    <%= f.text_field :title %><br>

    <%= f.label 'Tour Destination:' %><br>
    <%= f.text_field :destination %><br>

    <%= f.label 'Price:' %><br>
    <%= f.number_field :price%><br>

    <%= f.label 'Duration:' %><br>
    <%= f.number_field :duration %><br>

    <%= f.label 'Tour Description:' %><br>
    <%= f.text_area :description %><br>

    <%= f.submit %> 

<% end %>