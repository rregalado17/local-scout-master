
<h1>New Tour</h1>

<%= form_for(@tour) do |f| %>
  <div class="field">
    <%= f.label :title, 'Tour Title:' %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :description, 'Tour Description:' %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :destination_id, 'Tour Destination:' %><br>
    <%= f.collection_select :destination_id, Destination.order(:city), :id, :city, include_blank: true %>
  </div>
  
  <div class="field">
        <%= f.label :price, 'Tour Price:' %><br>
        <%= f.number_field :price %>
  </div>

    <div class="field">
    <%= f.label :title, 'Tour Duration:' %><br>
    <%= f.number_field :duration %>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>