
<h1>Users</h1>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :username %>
  <%= f.text_field :username %><br>

  <%= f.label :password %>
  <%= f.text_field :password %><br>



  <%= f.label :budget %>
  <%= f.number_field :budget %><br>

  <%= f.label :vacation_time %>
  <%= f.number_field :vacation_time %><br>



  <%= f.submit "Create User" %>
  <% end %>
